<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
<script>
    // --- HIỆU ỨNG TUYẾT RƠI (SNOWFALL ENGINE) ---
    const canvas = document.getElementById('snow-canvas');
    const ctx = canvas.getContext('2d');
    let particles = [];

    function resize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    }
    window.addEventListener('resize', resize);
    resize();

    class Particle {
        constructor() {
            this.reset();
        }
        reset() {
            this.x = Math.random() * canvas.width;
            this.y = Math.random() * canvas.height - canvas.height;
            this.size = Math.random() * 3 + 1;
            this.speed = Math.random() * 1 + 0.5;
            this.velX = Math.random() * 0.5 - 0.25;
            this.opacity = Math.random() * 0.5 + 0.3;
        }
        update() {
            this.y += this.speed;
            this.x += this.velX;
            if (this.y > canvas.height) this.reset();
        }
        draw() {
            ctx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
            ctx.beginPath();
            ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
            ctx.fill();
        }
    }

    for (let i = 0; i < 80; i++) particles.push(new Particle());

    function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        particles.forEach(p => { p.update(); p.draw(); });
        requestAnimationFrame(animate);
    }
    animate();

    // --- THUẬT TOÁN HOANGDZ V14 ---
    let adaptiveShift = 0;

    function analyzeMD5() {
        const input = document.getElementById("md5Input").value.trim();
        if (input.length < 31) return alert("VUI LÒNG NHẬP MÃ MD5!");

        // Giả lập quét dữ liệu
        const btn = document.querySelector('.btn-main');
        btn.innerText = "ĐANG GIẢI MÃ...";
        btn.disabled = true;

        setTimeout(() => {
            // Logic xử lý chính
            let hash = CryptoJS.MD5(input).toString();
            let score = 0;
            
            // Phân tích 8 ký tự đầu
            for(let i=0; i<8; i++) {
                score += parseInt(hash[i], 16);
            }

            // Kết hợp Adaptive Learning
            let finalResult = (score + adaptiveShift) % 2 === 0 ? "TÀI" : "XỈU";
            let confidence = 88 + (Math.random() * 9);

            // Hiển thị UI
            document.getElementById("result-box").style.display = "block";
            const resVal = document.getElementById("resValue");
            resVal.innerText = finalResult;
            resVal.style.color = finalResult === "TÀI" ? "#00d2ff" : "#ffffff";
            resVal.style.textShadow = finalResult === "TÀI" ? "0 0 40px rgba(0,210,255,0.6)" : "0 0 40px rgba(255,255,255,0.4)";
            
            document.getElementById("aiBadge").innerText = `ĐỘ TIN CẬY: ${confidence.toFixed(2)}%`;
            
            btn.innerText = "PHÂN TÍCH DỮ LIỆU";
            btn.disabled = false;
            
            window.lastPredict = { side: finalResult, code: input.substring(0,6) };
        }, 800);
    }

    function saveResult(isCorrect) {
        if(!isCorrect) {
            adaptiveShift += 1; // Đảo thuật toán nếu sai
        }

        const log = document.getElementById("histLog");
        if(log.innerText.includes("CHƯA CÓ")) log.innerHTML = "";
        
        const div = document.createElement("div");
        div.className = "hist-item";
        div.innerHTML = `
            <span>#${window.lastPredict.code}... [${window.lastPredict.side}]</span>
            <span style="color:${isCorrect?'#00ff00':'#ff3232'}">${isCorrect?'CHUẨN':'SAI'}</span>
        `;
        log.insertBefore(div, log.firstChild);
        
        document.getElementById("result-box").style.display = "none";
        document.getElementById("md5Input").value = "";
    }
</script>
</body>
